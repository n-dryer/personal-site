# Playwright Test Environment Variables
PLAYWRIGHT_BROWSERS_PATH=0
PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=0
CI=false

# Test configuration
TEST_TIMEOUT=60000
TEST_RETRIES=1
TEST_WORKERS=undefined

# Development server configuration
DEV_SERVER_PORT=3000
DEV_SERVER_HOST=localhost
DEV_SERVER_TIMEOUT=120000

# Screenshot and video settings
SCREENSHOT_MODE=only-on-failure
VIDEO_MODE=retain-on-failure
TRACE_MODE=on-first-retry

# Accessibility testing
AXE_CORE_ENABLED=true
A11Y_RULES=target-size,color-contrast,keyboard-navigation

# Visual regression testing
VISUAL_COMPARISONS=false
VISUAL_THRESHOLD=0.2

# Debug settings
DEBUG_MODE=false
HEADED_MODE=false
SLOW_MO=0
